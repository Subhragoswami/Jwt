public class AlertManagement extends AuditEntity {
    @Id
    @GeneratedValue(strategy = GenerationType.UUID)
    private UUID id;
    private UUID alertId;
    @Column(name = "MID")
    private String mId;
    private boolean isViewed;


@Repository
public interface AlertManagementRepository extends JpaRepository<AlertManagement, UUID> {

    @Query("SELECT a FROM AlertManagement a WHERE a.isViewed = false ORDER BY a.id ASC")
    List<AlertManagement> findTop50ByIsViewedFalse(Pageable pageable);
}



@Query("SELECT a FROM AlertManagement a WHERE a.isViewed = false AND a.mId = :mId ORDER BY a.id ASC")
List<AlertManagement> findTop50ByIsViewedFalseAndMId(@Param("mId") String mId, Pageable pageable);