package com.epay.reporting;

import com.epay.reporting.util.enums.Frequency;
import org.apache.commons.collections4.bag.SynchronizedSortedBag;
import org.joda.time.DateTime;

public class Test {

    public static void main(String[] args) {
        calculateBackDateByFrequency(Frequency.MONTHLY , 1709145300000L);
    }

    public static Long calculateBackDateByFrequency(Frequency frequency, Long timeInMillis) {
        DateTime backDate = new DateTime(timeInMillis);

        switch (frequency) {
            case Frequency.DAILY -> backDate = backDate.minusDays(1);
            case Frequency.MONTHLY -> backDate = backDate.minusMonths(1);
            case Frequency.YEARLY -> backDate = backDate.minusYears(1);
            default -> throw new IllegalArgumentException("Invalid Frequency :" + frequency);
        }
        System.out.println(backDate.getMillis());
        return backDate.getMillis();
    }

here if I pass feb 29th 2024 it's giving jan 29th as output but I need one month 
