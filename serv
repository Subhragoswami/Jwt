CREATE TABLE THEME (
    ID RAW(16) DEFAULT SYS_GUID() PRIMARY KEY NOT NULL,
    MID VARCHAR2(50) NOT NULL,
    LOGO	CLOB NOT NULL,
    PRIMARY_COLOR	VARCHAR2(10 CHAR),
    SECONDARY_COLOR	VARCHAR2(10 CHAR),
    MODULE VARCHAR2(50) NOT NULL,
    CREATED_BY	VARCHAR2(50 CHAR) NOT NULL,
    CREATED_AT	NUMBER NOT NULL,
    UPDATED_BY	VARCHAR2(50 CHAR) NOT NULL,
    UPDATED_AT	NUMBER NOT NULL,
    VERSION NUMBER DEFAULT 0 NOT NULL,
    DEFAULT_THEME NUMBER(1) DEFAULT 0,
    CONSTRAINT THEME_MID_MODULE_UK UNIQUE(MID,MODULE)
);

CREATE INDEX IDX_THEME_MID ON THEME(MID);
CREATE INDEX IDX_MODULE ON THEME(MODULE);


here I want to set LOGO	as null
