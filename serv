CREATE TABLE MENU_INFO (
    ID	RAW(16) DEFAULT SYS_GUID() PRIMARY KEY NOT NULL,
    CODE	VARCHAR2(20) NOT NULL UNIQUE,
    Name	VARCHAR2(20) NOT NULL UNIQUE,
    PARENT_ID	RAW(16),
    DESCRIPTION	VARCHAR2(100)
);


